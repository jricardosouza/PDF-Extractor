# Configurações do Sistema de Extração de Texto de PDFs
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Diretórios
INPUT_DIR=data/input
OUTPUT_DIR=data/output

# Configurações de Processamento
MIN_TEXT_LENGTH=50
EXTRACT_TABLES=True
PRESERVE_STRUCTURE=False
REMOVE_HEADERS=True
NORMALIZE_SPACES=True

# Formato de Saída (txt, json, csv)
OUTPUT_FORMAT=txt

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pdf_extractor.log

# Configurações de Performance
MAX_WORKERS=4
BATCH_SIZE=10

# Padrões Customizados (opcional)
# CUSTOM_PATTERNS=legal_docs
